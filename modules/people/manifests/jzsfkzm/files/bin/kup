#!/bin/bash

dirs=(
	'/www/kinja-prototypes'
	'/www/kinja-core'
	'/www/kinja-common'
	'/www/kinja-mantle'
)

index=0
dir_count=${#dirs[@]}
while [ "$index" -lt "$dir_count" ]
do
	echo "$(tput bold)Updating ${dirs[$index]}$(tput sgr0)"
	cd ${dirs[$index]}
	git pull --rebase
	git gc
	echo ""

	let "index = $index + 1"
done
